@model BookModel
@{
    ViewData["Title"] = "Editar livro";
}

<div class="text-center">

    <h1 class="display-4">Editar livro</h1>

</div>

<form asp-controller="Livro" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>
    <div class="form-group" style="margin-bottom: 20px;">
        <label for="nome">Nome</label>
        <input type="text" asp-for="NameBook" class="form-control" placeholder="Digite o nome do seu livro">
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label for="ano de lançamento">Ano de Lançamento</label>
        <input type="text" asp-for="Year" class=" form-control" placeholder="Digite o ano de lançamento do seu livro">
    </div>

    <div class="form-group" style="margin-bottom: 20px;">
        <label for="autor/autora">Autor/Autora</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Digite o nome do Autor/Autora do seu livro">
    </div>

    <button type="submit" class="btn btn-primary w-100" style="margin-bottom: 5px;">Alterar</button>
    <a class="btn btn-secondary w-100" asp-controller="Livro" asp-action="Index" role="button">Voltar</a>

</form>
